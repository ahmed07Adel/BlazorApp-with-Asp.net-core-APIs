@page "/EmployeeDetails/{id}"
@page "/EmployeeDetails"

@inherits EmployeeDetailsBase

<h3>EmployeeDetails</h3>
@if (Employees == null || Employees.Department == null)
{
    <div class="spinner"></div>
}
else
{
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Employees.FirstName @Employees.LastName @Coordinate</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@Employees.PhotoPath" @onmousemove="@Mouse_Move" />

                <h4>Employee ID : @Employees.EmployeeId</h4>
                <h4>Email : @Employees.Email</h4>
                <h4>Gender : @Employees.Gender</h4>
                <h4>Department : @(Employees.Department == null ? "N/A" : Employees.Department.DepartmentName)</h4>
                <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
            </div>
            <div class="card-footer text-center @CssClass">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
}
