@inherits DisplayEmployeeBase



<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">

    <div class="card-header">
        <h3>@Employees.FirstName  @Employees.LastName</h3>
    </div>

    <img class="card-img-top imageThumbnail" src="@Employees.PhotoPath" />

    @if (ShowFooter)
    {

        <div class="card-footer text-center">
            <a href="@($"EmployeeDetails/{Employees.EmployeeId}")" class="btn btn-primary m-1">View</a>

            <a href="@($"EditEmployee/{Employees.EmployeeId}")" class="btn btn-primary m-1">Edit</a>



            <button type="button" class="btn btn-danger" @onclick="@DeleteClick">Delete</button>


        </div>
    }
    <Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
             ConfirmationMessage=@($"Are you sure you want to delete \"{Employees.FirstName}\"")>
    </Confirm>
</div>

